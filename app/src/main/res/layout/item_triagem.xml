<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/bg_card">
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Henrique Silva"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>
                <View
                    android:id="@+id/dotPrioridade"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle_gray"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="4dp"
                android:paddingHorizontal="10dp"
                tools:text="ConcluÃ­da"
                android:textColor="#1DB954"
                android:textSize="12sp"
                android:background="@drawable/status_background"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvSNS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="SNS: 123456789"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_data_24"
                app:tint="@color/green_700"/>
            <TextView
                android:id="@+id/tvData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="05/11/2024"
                android:layout_marginLeft="6dp"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_historico"
                app:tint="@color/green_700"/>

            <TextView
                android:id="@+id/tvHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="14:30"
                android:layout_marginLeft="6dp"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvQueixa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Queixa: Dores abdominais"
            android:textSize="15sp"
            android:textColor="@color/text_primary"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/input_bg"
            android:layout_marginTop="12dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/layoutEnfermeiroInfo"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/icon_perfil_24"
                    app:tint="@color/green_700"/>

                <TextView
                    android:id="@+id/tvEnfermeiro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Enf. Maria"
                    android:layout_marginLeft="6dp"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBotoesAcao"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btnArquivar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_save"
                    app:tint="#4CAF50"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Arquivar"/>
                <ImageView
                    android:id="@+id/btnEliminar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:src="@android:drawable/ic_menu_delete"
                    app:tint="#D52626"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Eliminar"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>