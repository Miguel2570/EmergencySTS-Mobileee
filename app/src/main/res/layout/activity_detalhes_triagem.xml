<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pt.ipleiria.estg.dei.emergencysts.GradientView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/bg_card"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="22dp">
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="4dp"
                android:src="@drawable/ic_voltaratras"
                app:tint="@color/text_primary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Detalhes da Triagem"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/card_green_rounded">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dados do Paciente"
                        android:textColor="@color/green_700"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />
                    <TextView
                        android:id="@+id/tvNome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nome"
                        android:textStyle="bold"
                        android:textColor="@color/green_700" />

                    <TextView
                        android:id="@+id/tvNomeValor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Henrique Silva"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/text_primary" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data de Nascimento             SNS"
                        android:textStyle="bold"
                        android:textColor="@color/green_700" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDataNascimento"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="15/03/1990"
                            android:textColor="@color/text_primary" />
                        <TextView
                            android:id="@+id/tvSNS"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="123456789"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTelefoneLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telefone"
                        android:textStyle="bold"
                        android:textColor="@color/green_700"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvTelefoneValor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+351 912 345 678"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_white_rounded">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Informação Clínica"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data/Hora de Registo"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvDataTriagem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--/--/---- --:--"
                        android:textSize="16sp"
                        android:textColor="@color/green_700"
                        android:layout_marginBottom="12dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Motivo da Consulta"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvMotivo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consulta de urgência devido a dores intensas"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="12dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Queixa Principal"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvQueixa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dores abdominais"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descrição de Sintomas"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvDescricao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Náuseas, vómitos e dores abdominais"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Início dos Sintomas"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvInicio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Há 6 horas"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intensidade da Dor (1-10)"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvDor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7 - Forte"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alergias"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvAlergias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Penicilina"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medicação Atual"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvMedicacao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paracetamol 1000mg"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prioridade da Pulseira"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:id="@+id/dotPrioridade"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/circle_yellow" />

                        <TextView
                            android:id="@+id/tvPrioridade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_secondary"
                            android:text="Amarelo - Urgente" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/layoutBotoesAcao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnArquivar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Arquivar Triagem"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>
            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="ELIMINAR PERMANENTE"
                android:textColor="#FFFFFF"
                android:backgroundTint="#D32F2F"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>